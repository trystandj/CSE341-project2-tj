{
  "swagger": "2.0",
  "info": {
    "title": "Project 2 API",
    "description": "API documentation for the Project application",
    "version": "1.0.0"
  },
  "host": "https://cse341-project2-tj.onrender.com",
  "basePath": "/",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "tags": [
    {
      "name": "Home",
      "description": "Home page operations"
    },
    {
      "name": "Books",
      "description": "Operations related to Books"
    },
    {
      "name": "Authors",
      "description": "Operations related to Authors"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["Home"],
        "description": "Returns the homepage content",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/books/": {
      "get": {
        "tags": ["Books"],
        "description": "Returns a list of all books",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["Books"],
        "description": "Adds a new book to the database",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "tags": ["Books"],
        "description": "Gets a book by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": ["Books"],
        "description": "Updates a book by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "delete": {
        "tags": ["Books"],
        "description": "Deletes a book by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/authors/": {
      "get": {
        "tags": ["Authors"],
        "description": "Returns a list of all authors",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["Authors"],
        "description": "Adds a new author",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Author"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/authors/{id}": {
      "get": {
        "tags": ["Authors"],
        "description": "Gets an author by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": ["Authors"],
        "description": "Updates an author by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Author"
              }
            }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "delete": {
        "tags": ["Authors"],
        "description": "Deletes an author by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Book": {
      "type": "object",
      "required": ["title", "author"],
      "properties": {
        "title": { "type": "string", "example": "Dune" },
        "author": { "type": "string", "example": "Frank Herbert" },
        "genre": { "type": "string", "example": "Sci-Fi" },
        "published_year": { "type": "integer", "example": 1965 },
        "isbn": { "type": "string", "example": "9780441172719" },
        "pages": { "type": "integer", "example": 412 },
        "available": { "type": "boolean", "example": true },
        "best_seller": { "type": "boolean", "example": true }
      }
    },
    "Author": {
      "type": "object",
      "required": ["name", "dob"],
      "properties": {
        "name": { "type": "string", "example": "Frank Herbert" },
        "dob": { "type": "string", "format": "date", "example": "1920-10-08" },
        "age": { "type": "integer", "example": 65 },
        "nationality": { "type": "string", "example": "American" },
        "notable_work": { "type": "string", "example": "Dune" },
        "awards": {
          "type": "array",
          "items": { "type": "string" },
          "example": ["Hugo Award", "Nebula Award"]
        },
        "alive": { "type": "boolean", "example": false }
      }
    }
  }
}